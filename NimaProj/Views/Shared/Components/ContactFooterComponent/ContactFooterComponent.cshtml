@model ConfigVm
<div class="contenet_widget_footer">
    <ul class="mb-3">
        <li>
            <span> آدرس:  @Model.Address.</span>
        </li>
        <li>
            <span> شماره تماس: @Model.TellHome</span>
        </li>
        <li>
            <span> ایمیل: @Model.Email</span>
        </li>
    </ul>

    <div class="area-socialIcon d-flex ">
        @if (Model.IsInista)
        {
            <a href="@Model.Inista" class="icon instegram">
                <span class="tooltip-site">Instegram</span>
            </a>
        }
        @if (Model.IsWhatsapp)
        {
            <a href="https://api.whatsapp.com/send?phone=@(Model.Whatsapp)" class="icon fa-whatsapp">
                <span class="tooltip-site">Whatsapp</span>
            </a>
        }
        @if (Model.IsTelegram)
        {<a href="@Model.Telegram" class="icon fa-telegram-plane">
                <span class="tooltip-site">Telegram</span>
            </a>
        }
    </div>
</div>