@model IEnumerable<TblSpecialOffer>
@if (Model.Any())
{
    <section class="mb-2 mb-md-3  mb-lg-4 mb-xl-5 special-section">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <h2 class="wow fadeInUp title-site">
                    محصولات پیشنهادی
                    <span>محصولات پیشنهادی</span>
                </h2>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="owl-carousel slider_product">
                        @foreach (var item in Model)
                        {
                            <div class="wow bounceIn item_slider_product-new" data-wow-duration="2s">
                            <partial name="_productBlock" model="item.Product" />
                            </div>


                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

}