@model ForgotPasswordVm
@{
    ViewData["Title"] = "فراموش کردن رمز";
}


<main class="content">
    <section class="mb-5 pb-sm-2 pb-md-3  pb-lg-4 pb-xl-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-sm-10 col-md-9 col-lg-8  col-xl-6">
                    <div class="login login-register-wrap">
                        <div class="area-form-login area-form-login-register p-3 p-sm-4 p-md-5 ">
                            <h3 class="heading-style1 mb-3">بازیابی رمز عبور</h3>
                            <p class="margin-bottom margin-small-top text-2">
                                برای بازیابی رمز عبور، شماره تلفن خود را وارد کنید
                            </p>
                            <form asp-action="ForgotPassword" method="post" asp-area="" class="form-block col"
                                  data-ajax="true"
                                  data-ajax-method="POST"
                                  data-ajax-mode="replace"
                                  data-ajax-complete="LoadingEnd()">
                                <partial name="_CaptchaInput" />

                                <div class="form-group">
                                    <label>شماره تلفن <span class="text-danger ">*</span></label>
                                    <input type="tel" placeholder="09123456789" asp-for="TellNo"
                                           class="form-control">
                                    <span class="text-danger" asp-validation-for="TellNo"></span>
                                </div>

                                <button class="btn-animate1 mt-4" onclick="LoadingRun()">بازیابی</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts
{
    <partial name="_CaptchaScripts" />
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
