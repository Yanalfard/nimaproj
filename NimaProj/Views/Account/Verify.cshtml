@model ActiveVm
@{
    ViewData["Title"] = "فعال سازی";
}

@section Scripts
{
    <partial name="_CaptchaScripts" />
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}


<main class="content">
    <section class="mb-5 pb-sm-2 pb-md-3  pb-lg-4 pb-xl-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-sm-10 col-md-9 col-lg-8  col-xl-6">
                    <div class="login login-register-wrap">
                        <div class="area-form-login area-form-login-register p-3 p-sm-4 p-md-5 ">
                            <h3 class="heading-style1 mb-3"> احراز هویت</h3>
                            <form asp-action="Verify" method="post" asp-area="" class="form-block col"
                                  data-ajax="true"
                                  data-ajax-method="POST"
                                  data-ajax-mode="replace"
                                  data-ajax-complete="LoadingEnd()">
                                <input type="hidden" asp-for="Tell" />
                                <partial name="_CaptchaInput" />
                                <p class="margin-bottom margin-small-top text-2">
                                    کد احراز هویت به شماره شما ارسال گردید
                                </p>
                                <div class="form-group">
                                    <label>گد ارسالی  <span class="text-danger ">*</span></label>
                                    <input type="text" placeholder="123456" asp-for="Auth"
                                           class="form-control">
                                    <span class="text-danger" asp-validation-for="Auth"></span>
                                </div>

                                <button class="btn-animate1 mt-4" onclick="LoadingRun()">ثبت</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
