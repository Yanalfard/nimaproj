@model RegisterVm
@{
    ViewData["Title"] = "ثبت نام";
}

<main class="content">
    <section class="mb-5 pb-sm-2 pb-md-3  pb-lg-4 pb-xl-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-sm-10 col-md-9 col-lg-8  col-xl-6">
                    <div class="register login-register-wrap">
                        <div class="area-form-register area-form-login-register  p-3 p-sm-4 p-md-5 ">
                            <h3 class="heading-style1 mb-3">ثبت نام</h3>
                            <form asp-action="Register" asp-area="" class="form-block col"
                                  data-ajax="true"
                                  data-ajax-method="POST"
                                  data-ajax-mode="replace"
                                  data-ajax-complete="LoadingEnd()">
                                <partial name="_CaptchaInput" />
                                <div class="form-group">
                                    <label>نام <span class="text-danger ">*</span></label>
                                    <input type="text" placeholder="علی" asp-for="Name" class="form-control">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="form-group">
                                    <label>شماره تلفن <span class="text-danger ">*</span></label>
                                    <input type="tel" placeholder="09123456789" asp-for="TellNo"
                                           class="form-control">
                                    <span class="text-danger" asp-validation-for="TellNo"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="Password">کلمه عبور <span class="text-danger ">*</span></label>
                                    <input type="password"  asp-for="Password" 
                                           class="form-control input-password" placeholder="کلمه عبور">
                                    <span class="text-danger" asp-validation-for="Password"></span>

                                </div>
                                <div class="form-group mb-3">
                                    <label for="Password">
                                        تایید کلمه عبور <span class="text-danger ">*</span>
                                    </label>
                                    <input type="password" 
                                           class="form-control input-password" asp-for="RePassword" placeholder="تایید کلمه عبور">
                                    <span class="text-danger" asp-validation-for="RePassword"></span>

                                </div>

                                @*<div class="form-check form-check-custom ">
                                        <label class="checkbox-container">
                                            من با شرایط و سیاست موافقم.
                                            <input type="checkbox" required>
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>*@


                                <button class="btn-animate1 mt-4" onclick="LoadingRun()">ثبت نام</button>
                                <div class="form-note mt-4" onclick="LoadingRun()">
                                    حساب کاربری دارید؟ <a href="/Login">وارد شوید</a>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts
{
    <partial name="_CaptchaScripts" />

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
