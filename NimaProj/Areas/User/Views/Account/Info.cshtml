@model InfoVm
@{
    ViewData["Title"] = "اطلاعات";
}
<div class="account-content content-details-account">
    @if (Context.Request.Query["Resetinfo"].ToString() == "true")
    {
        <div class="alert alert-success">
            <p class="help-block">اطلاعات شما تغیر یافت</p>
        </div>
    }

    <div class="header-tab-content-account d-flex justify-content-between align-items-center mb-4">

        <h1 class="title-tabcontent-account">
            اطلاعات حساب

        </h1>

    </div>
    <div class="main-content-account">
        <div class="area-form-wrap">
            <form action="Info" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="ImageUrl" value="@Model.ImageUrl" />
                <div class="row">
                    <div class="form-group col-md-6 mb-4">
                        <label for="inputname">نام</label>
                        <input type="text" class="form-control" asp-for="Name"
                               placeholder="مهدی ">
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>

                    <div class="form-group col-md-6 mb-4">
                        <label for="inputname">عکس </label>
                        <input type="file" class="form-control" name="MainImage" id="MainImage">
                    </div>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>

                </div>
                <div class="text-center mt-3">

                    <div class="area-btn-save">
                        <button type="submit" class="btn-style2">
                            ذخیره تغییرات<i class="far fa-sd-card mr-2"></i>
                        </button>
                    </div>
                </div>


            </form>
        </div>
    </div>


</div>


@section Scripts{

    <script>
        $('.list-group-item').removeClass('active');
        $('#infoprofile-tab').addClass('active');

    </script>
}
