        <section class="mb-5 pb-sm-2 pb-md-3  pb-lg-4 pb-xl-5">
            <div class="container container-Page-account">
                <div class="row">

                    <div class="col-12 col-lg-3 container-sidebar-account ">
                        <div class="sidebar-account">

                            @await Component.InvokeAsync("InfoUserComponent", new { tell = User.Identity.Name })

                            <div class="account-menu">
                                <div class="list-group  flex-column">


                                    <a class="list-group-item " href="/User/Home" id="orders-tab">
                                        <i class="fal fa-cart-arrow-down ml-3"></i>سفارش ها
                                    </a>




                                    <a class="list-group-item" href="/User/OfflineOrder" id="comment-tab">
                                        <i class="fal fa-comment-alt ml-3"></i>سفارش های آفلاین

                                    </a>




                                    <a class="list-group-item" href="/User/Account/Info" id="infoprofile-tab">
                                        <i class="fal fa-clipboard-list-check ml-3"></i>جزییات حساب
                                    </a>




                                    <a class="list-group-item" href="/User/Account/ChangePassword" id="userChangePassword">
                                        <i class="fal fa-lock-alt ml-3"></i>تغییر
                                        رمز عبور
                                    </a>




                                    <a class="list-group-item" href="/LogOut">
                                        <i class="fal fa-sign-out-alt  ml-3"></i>خروج
                                    </a>

                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="col-12 col-xl-9 container-content-account">
                        <div class="account-header d-flex justify-content-between justify-content-xl-end">
                            <div class="icon_meni_bar d-block d-xl-none">
                                <a><img src="~/galeb/img/menu.png"></a>
                            </div>

                            <a class="link-back-home" href="/">صفحه نخست <i class="far fa-home"></i></a>

                        </div>

                        @RenderBody()


                    </div>

                </div>
            </div>
        </section>
    </main>





