@model DataLayer.Models.TblRegularQuestion
<div class="modal-header">
    <h6 class="modal-title" id="modalCenterTitle">
        پرسش و پاسخ
    </h6>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="form-group">
        <label class="mr-1">پرسش:</label>
        <div class="bg-purple p-3 uk-border-rounded">
            @Model.Question
        </div>
    </div>
    <div class="form-group">
        <label class="mr-1">پاسخ:</label>
        <div class="bg-light p-3 uk-border-rounded">
            @Model.Answer
        </div>
    </div>
</div>