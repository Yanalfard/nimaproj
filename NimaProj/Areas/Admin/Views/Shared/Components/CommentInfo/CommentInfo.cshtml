@model DataLayer.Models.TblComment
@using NimaProj.Utilities
<div class="modal-header">
    <h6 class="modal-title" id="modalCenterTitle">
        جزئیات نظر @Model.CommentId
    </h6>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div id="card-table" class="card-body flex-div">
        <div class="form-row ">
            <div class="form-group col-md-4">
                <label>نام کاربری:</label>
                <span>@Model.Client.Name</span>
            </div>
            <div class="form-group col-md-4">
                <label>تاریخ ثبت:</label>
                <span>@Model.DateCreated.Value.AllToShamsi()</span>
            </div>
            <div class="form-group col-md-4">
                <label>وضعیت: </label>
                @if (Model.IsValid)
                {
                    <span class="text-success">تایید شده</span>
                }
                else
                {
                    <span class="text-warning">تایید نشده</span>
                }
            </div>
            <div class="form-group col-12">
                <label>متن:</label>
                <div class="bg-light p-3 uk-border-rounded">
                    @Model.Body
                </div>
            </div>
            <div class="form-group col-12">
                @if (Model.IsValid)
                {
                    <a onclick="Success(@Model.CommentId)" class="btn btn-danger btn-sm text-white">رد پیام</a>
                }
                else
                {
                    <a onclick="Success(@Model.CommentId)" class="btn btn-success btn-sm text-white">تائید پیام</a>
                }
            </div>
        </div>
    </div>
</div>

